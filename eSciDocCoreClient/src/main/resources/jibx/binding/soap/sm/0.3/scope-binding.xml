<binding>

	<mapping name="scope" ns="http://www.escidoc.de/schemas/scope/0.3"
		class="de.escidoc.core.resources.sm.scope.Scope">

		<namespace uri="http://www.escidoc.de/schemas/scope/0.3"
			default="elements" prefix="scope" />

    <value name="objid" style="attribute"
      set-method="setObjid" get-method="getObjid" usage="optional" />

		<structure name="name" ns="http://www.escidoc.de/schemas/scope/0.3">
			<value style="text" field="name" />
		</structure>

		<structure name="type" ns="http://www.escidoc.de/schemas/scope/0.3">
			<value style="text" field="scopeType" />
		</structure>
	</mapping>

</binding>