<?xml version="1.0" encoding="UTF-8"?>
<binding>

	<mapping name="test" class="de.escidoc.core.common.Test">
	
	   <structure name="name">
       <value style="text" field="name"/>
     </structure>
	
	   <collection field="tables" create-type="java.util.LinkedList"
	     item-type="de.escidoc.core.common.TestTable">
	     
	     <structure name="table">
	       <structure name="name">
	          <value style="text" field="name"/>
	        </structure>
	        
	        <collection field="fields" create-type="java.util.LinkedList"
	          item-type="de.escidoc.core.common.TestEntry">
	          <structure name="field">
	            <value style="text" field="value"/>
	          </structure>
	        </collection>
	        
	     </structure>
	   </collection>
	   
	   <structure name="data">
	     <value style="text" field="data"/>
	   </structure>
	</mapping>

</binding>