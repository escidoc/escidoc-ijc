					<target>1.6</target>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
					<verbose>true</verbose>
					<fork>true</fork>
					<debug>true</debug>
					<optimize>false</optimize>
				</configuration>
				<!-- <executions> <execution> <id>default-compile</id> <configuration> 
					<includes> <source>src/main/java/**/*.java</source> <source>target/generated-sources/**/*.java</source> 
					</includes> </configuration> </execution> </executions> -->
