<binding>
	<!-- start: binding of relations  -->
<!-- *****************************************
			Relations 
			****************************************** -->
			
	<mapping name="relations" ns="http://www.escidoc.de/schemas/relations/0.3"
		class="de.escidoc.core.resources.common.Relations">

		<namespace uri="http://www.escidoc.de/schemas/relations/0.3"
			prefix="relations" />
			
		<namespace uri="http://www.w3.org/1999/xlink" prefix="xlink" />
		
		<collection ns="http://www.escidoc.de/schemas/relations/0.3"
			ordered="false" create-type="de.escidoc.core.resources.common.Relations"
			usage="optional">
			
				<structure ns="http://www.escidoc.de/schemas/relations/0.3"
					name="relation" 
					type="de.escidoc.core.resources.common.Relation">
					
					<value ns="http://www.w3.org/1999/xlink" name="href" style="attribute" 
						set-method="setHref" get-method="getHref" usage="optional" />
						
					<value ns="http://www.w3.org/1999/xlink" name="title" style="attribute" 
						set-method="setTitle" get-method="getTitle" usage="optional" />
						
					<value ns="http://www.w3.org/1999/xlink" name="type" style="attribute" 
						set-method="setXlinkType" get-method="getXlinkType" usage="optional" />
					
					<value name="predicate" style="attribute"
					set-method="setPredicate" get-method="getPredicate" usage="optional" />
				</structure>
				
			
		</collection>

	</mapping>
	<!-- end: binding of relations-->
</binding>