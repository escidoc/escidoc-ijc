<!--						<structure field="recordDataDOM" usage="optional"-->
<!--							marshaller="org.jibx.extras.DomElementMapper" -->
<!--							unmarshaller="org.jibx.extras.DomElementMapper"-->
<!--							type="org.w3c.dom.Element"/>-->
<!--					</structure>-->
<!--					-->
<!--					<value name="recordPosition" field="recordPosition" usage="optional" />-->
<!--				</structure>-->
			</collection>
		</structure>
		
		<structure name="echoedSearchRetrieveRequest" usage="optional"/>		
	</mapping>
</binding>
