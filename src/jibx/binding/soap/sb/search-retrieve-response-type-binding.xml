<binding>
	<!--
		This is a binding for the SRW/U reference implementation and there
		classes.
	-->
	<!--
		Filter and Search should be identical, but there aren't at least on
		SOAP interface. Whereas the Search delivers via SOAP a class structure
		(like one can actually expect via SOAP) and Filter delivers the XML
		representation as response. Furthermore differ the method parameter.
		Both using not plain Strings. Filter requires a HashMap as data
		structure and Search makes usage of SRW classes.
	-->
	<!--
		A wrapper class around the
		gov.loc.www.zing.srw.SearchRetrieveResponseType is used to allow JiBX
		to weave in the mapping code.
	-->
	<!-- start: binding of a search-retrieve-response-type -->
	<mapping name="searchRetrieveResponse" ns="http://www.loc.gov/zing/srw/"
		class="de.escidoc.core.resources.sb.search.SearchRetrieveResponse">
		<namespace uri="http://www.loc.gov/zing/srw/" prefix="zs" />
		<structure map-as="abstract-search-retrieve-response" />
	</mapping>


	<!--
		start: abstract binding of a single search-retrieve-response-type
	-->
	<mapping ns="http://www.loc.gov/zing/srw/"
		class="de.escidoc.core.resources.sb.search.SearchRetrieveResponse"
		abstract="true" type-name="abstract-search-retrieve-response">

		<namespace uri="http://www.loc.gov/zing/srw/" prefix="zs"/>

		<value name="version" field="version"
			ns="http://www.loc.gov/zing/srw/" usage="optional" />
		<value name="numberOfRecords" field="numberOfRecords"
			ns="http://www.loc.gov/zing/srw/" usage="optional" />

		<structure name="records" ns="http://www.loc.gov/zing/srw/"
			usage="optional">

			<collection ns="http://www.loc.gov/zing/srw/" field="records"
				create-type="java.util.LinkedList">

				<structure ns="http://www.loc.gov/zing/srw/" type="de.escidoc.core.resources.sb.Record"
					usage="optional" />

			</collection>
		</structure>
	</mapping>
	<!-- end: abstract binding of a single search-retrieve-response-type -->


	<mapping name="record" class="de.escidoc.core.resources.sb.Record"
		ns="http://www.loc.gov/zing/srw/">
		<namespace uri="http://www.loc.gov/zing/srw/" prefix="zs" default="all"/>

		<value name="recordSchema" field="recordSchema" usage="optional" />

		<value name="recordPacking" field="recordPacking" usage="optional" />

		<structure name="recordData">
			<structure field="recordData" usage="optional" />
		</structure>

		<value name="recordPosition" field="recordPosition" usage="optional" />
	</mapping>

</binding>
