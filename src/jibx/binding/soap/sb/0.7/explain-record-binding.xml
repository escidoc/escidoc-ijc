<binding>

	<!--  SOAP Binding -->

	<!-- *****************************************
		Explain
		****************************************** -->
	<mapping name="explain"
		class="de.escidoc.core.resources.sb.explain.ExplainRecord">
		<namespace uri="http://explain.z3950.org/dtd/2.0/"
			default="elements" />
		<value name="authoritative" style="attribute"
			set-method="setAuthoritative" get-method="isAuthoritative"
			usage="optional" />
		<structure name="serverInfo" field="serverInfo"
			type="de.escidoc.core.resources.sb.explain.ServerInfo"
			usage="optional">
			<value name="host" set-method="setHost" get-method="getHost"
				usage="optional" />
			<value name="port" set-method="setPort" get-method="getPort"
				usage="optional" />
			<value name="database" set-method="setDatabase"
				get-method="getDatabase" usage="optional" />
		</structure>

		<structure name="databaseInfo" field="databaseInfo"
			type="de.escidoc.core.resources.sb.explain.DatabaseInfo"
			usage="optional">
			<value name="title" set-method="setTitle"
				get-method="getTitle" usage="optional" />
			<value name="description" set-method="setDescription"
				get-method="getDescription" usage="optional" />
			<value name="contact" set-method="setContact"
				get-method="getContact" usage="optional" />
			<structure name="implementation" field="implementation"
				type="de.escidoc.core.resources.sb.explain.Implementation"
				usage="optional">
				<value name="version" style="attribute"
					set-method="setVersion" get-method="getVersion" usage="optional" />
				<value name="title" set-method="setTitle"
					get-method="getTitle" usage="optional" />
			</structure>
		</structure>

		<structure name="indexInfo" field="indexInfo"
			type="de.escidoc.core.resources.sb.explain.IndexInfo"
			usage="optional">
			<collection field="sets"
				create-type="java.util.LinkedList">
				<structure name="set"
					type="de.escidoc.core.resources.sb.explain.MySet"
					usage="optional">
					<value name="identifier" style="attribute"
						set-method="setIdentifier" get-method="getIdentifier"
						usage="optional" />
					<value name="name" style="attribute"
						set-method="setName" get-method="getName" usage="optional" />
				</structure>
			</collection>
			<collection field="indexes"
				create-type="java.util.LinkedList">
				<structure name="index"
					type="de.escidoc.core.resources.sb.explain.Index"
					usage="optional">
					<value name="title" set-method="setTitle"
						get-method="getTitle" usage="optional" />
					<structure name="map" 
						
						usage="optional">
						<structure name="name" field="name"
							type="de.escidoc.core.resources.sb.explain.Name"
							usage="optional">
							<value name="set" style="attribute"
								set-method="setSet" get-method="getSet" usage="optional" />
							<value style="text" field="name"
								set-method="setName" get-method="getName" usage="optional" />
						</structure>
					</structure>
				</structure>
			</collection>

			<collection field="sortKeyWords"
				create-type="java.util.LinkedList">
				<value name="sortKeyword" type="java.lang.String"
					usage="optional" />
			</collection>
		</structure>

		<structure name="schemaInfo" 
			usage="optional">
			<structure name="schema" field="schema"
				type="de.escidoc.core.resources.sb.explain.Schema"
				usage="optional">
				<value name="sort" style="attribute"
					set-method="setSort" get-method="isSort" usage="optional" />
				<value name="retrieve" style="attribute"
					set-method="setRetrieve" get-method="isRetrieve" usage="optional" />
				<value name="name" style="attribute"
					set-method="setName" get-method="getName" usage="optional" />
				<value name="identifier" style="attribute"
					set-method="setIdentifier" get-method="getIdentifier"
					usage="optional" />
				<value name="location" style="attribute"
					set-method="setLocation" get-method="getLocation" usage="optional" />
				<value name="title" set-method="setTitle"
					get-method="getTitle" usage="optional" />
			</structure>
		</structure>

		<structure name="configInfo" field="configInfo"
			type="de.escidoc.core.resources.sb.explain.ConfigInfo"
			usage="optional">
			<collection field="defaultSettings"
				create-type="java.util.LinkedList">
				<structure name="default"
					type="de.escidoc.core.resources.sb.explain.DefaultSetting"
					usage="optional">
					<value name="type" style="attribute"
						set-method="setType" get-method="getType" usage="optional" />
					<value style="text" field="value"
						set-method="setValue" get-method="getValue" usage="optional" />
				</structure>
			</collection>
		</structure>

	</mapping>
</binding>
