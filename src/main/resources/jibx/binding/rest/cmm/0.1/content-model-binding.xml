<?xml version="1.0" encoding="UTF-8"?>
<binding>

	<format type="java.net.URI"
               serializer="de.escidoc.core.common.jibx.CustomConverter.serializeURI"
               deserializer="de.escidoc.core.common.jibx.CustomConverter.deserializeURI"/>
<!--  
