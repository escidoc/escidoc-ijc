<binding>

  <namespace uri="http://www.escidoc.de/schemas/structmap/0.4"
    prefix="struct-map" />
  <namespace uri="http://escidoc.de/core/01/structural-relations/"
    prefix="srel" />
  <namespace uri="http://www.w3.org/1999/xlink" prefix="xlink" />

	<!-- start: abstract binding of struct-map resource -->
	<mapping name="struct-map" ns="http://www.escidoc.de/schemas/structmap/0.4"
		class="de.escidoc.core.resources.common.structmap.StructMap">
		<structure map-as="abstract-struct-map"/>
	</mapping>
	
	<!-- start: abstract binding of struct-map resource -->
  <mapping ns="http://www.escidoc.de/schemas/structmap/0.4"
    class="de.escidoc.core.resources.common.structmap.StructMap"
    abstract="true" type-name="abstract-struct-map">

    <value ns="http://www.w3.org/1999/xlink" name="href" style="attribute" 
      set-method="setXLinkHref" get-method="getXLinkHref" usage="optional" />
    <value ns="http://www.w3.org/1999/xlink" name="title" style="attribute" 
      set-method="setXLinkTitle" get-method="getXLinkTitle" usage="optional" />
    <value ns="http://www.w3.org/1999/xlink" name="type" style="attribute" 
      set-method="setXLinkType" get-method="getXLinkType" usage="optional" />

    <collection ns="http://www.escidoc.de/schemas/structmap/0.4"
       create-type="java.util.LinkedList" field="items">
      
      <structure name="item"
        ns="http://escidoc.de/core/01/structural-relations/" 
        type="de.escidoc.core.resources.common.structmap.ItemMemberRef">
        
        <value ns="http://www.w3.org/1999/xlink" name="href" style="attribute" 
          set-method="setXLinkHref" get-method="getXLinkHref" usage="optional" />
        <value ns="http://www.w3.org/1999/xlink" name="title" style="attribute" 
          set-method="setXLinkTitle" get-method="getXLinkTitle" usage="optional" />
        <value ns="http://www.w3.org/1999/xlink" name="type" style="attribute" 
          set-method="setXLinkType" get-method="getXLinkType" usage="optional" />
      </structure>
    </collection>
    
    <collection ns="http://www.escidoc.de/schemas/structmap/0.4"
       create-type="java.util.LinkedList" field="containers">
       
      <structure name="container"
        ns="http://escidoc.de/core/01/structural-relations/"
        type="de.escidoc.core.resources.common.structmap.ContainerMemberRef">
        
        <value ns="http://www.w3.org/1999/xlink" name="href" style="attribute" 
          set-method="setXLinkHref" get-method="getXLinkHref" usage="optional" />
        <value ns="http://www.w3.org/1999/xlink" name="title" style="attribute" 
          set-method="setXLinkTitle" get-method="getXLinkTitle" usage="optional" />
        <value ns="http://www.w3.org/1999/xlink" name="type" style="attribute" 
          set-method="setXLinkType" get-method="getXLinkType" usage="optional" />
      </structure>
    </collection>

  </mapping>
	<!-- end: abstract binding of struct-map resource -->
</binding>