<?xml version="1.0" encoding="UTF-8"?>
<binding>

	<!-- start: binding of a single user account attributes -->
	<mapping ns="http://www.escidoc.de/schemas/attributes/0.1"
		name="attribute" class="de.escidoc.core.resources.aa.useraccount.Attribute">
		<namespace uri="http://www.escidoc.de/schemas/attributes/0.1"
			prefix="attributes" />

		<structure map-as="abstract-attribute" />

	</mapping>
	<!-- end: binding of a single user account attributes -->


	<!-- start: binding of an user account attributes -->
	<mapping ns="http://www.escidoc.de/schemas/attributes/0.1"
		name="attributes" class="de.escidoc.core.resources.aa.useraccount.Attributes">

		<namespace uri="http://www.escidoc.de/schemas/attributes/0.1"
			prefix="attributes" />

		<collection ns="http://www.escidoc.de/schemas/attributes/0.1" 
			create-type="de.escidoc.core.resources.aa.useraccount.Attributes">
			
			<structure ns="http://www.escidoc.de/schemas/attributes/0.1" 
				name="attribute"
				type="de.escidoc.core.resources.aa.useraccount.Attribute">
				<structure map-as="abstract-attribute" />
			</structure>
		</collection>
	</mapping>
	<!-- end: binding of an user account attributes -->



	<!-- start: abstract binding of a single user account attribute -->
	<mapping ns="http://www.escidoc.de/schemas/attributes/0.1"
		class="de.escidoc.core.resources.aa.useraccount.Attribute" abstract="true"
		type-name="abstract-attribute">

		<namespace uri="http://www.escidoc.de/schemas/attributes/0.1"
			prefix="attributes" />

		<value name="objid" style="attribute" set-method="setObjid"
			get-method="getObjid" usage="optional" />
		<value name="last-modification-date" style="attribute" type="org.joda.time.DateTime"
			set-method="setLastModificationDate" get-method="getLastModificationDate"
			usage="optional" />

		<value name="name" style="attribute" set-method="setName"
			get-method="getName" usage="optional" />
		<value name="internal" style="attribute" set-method="setInternal"
			get-method="isInternal" usage="optional" />
		<value style="text" set-method="setValue" get-method="getValue"
			usage="optional" />

	</mapping>
	<!-- end: binding of an user account attribute -->

</binding>
