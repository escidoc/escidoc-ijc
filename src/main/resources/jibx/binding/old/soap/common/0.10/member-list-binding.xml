<binding>
  <!-- SOAP Binding -->
  <!-- start: binding of a member list -->
  <mapping ns="http://www.escidoc.de/schemas/memberlist/0.10"
    name="member-list" class="de.escidoc.core.resources.om.MemberList">
    
    <namespace uri="http://www.escidoc.de/schemas/memberlist/0.10"
      prefix="member-list" />
    <namespace uri="http://www.escidoc.de/schemas/item/0.10"
      prefix="escidocItem" />
    <namespace uri="http://www.escidoc.de/schemas/container/0.9"
      prefix="escidocContainer" />

      <value name="limit" set-method="setLimit" get-method="getLimit"
        style="attribute" usage="optional" />
      <value name="offset" set-method="setOffset" get-method="getOffset"
        style="attribute" usage="optional" />
      <value name="number-of-records" set-method="setNumberOfRecords"
        get-method="getNumberOfRecords" style="attribute" usage="optional" />


    <collection field="members"
      factory="de.escidoc.core.resources.om.MemberList.membersFactory">

      <structure name="item" ns="http://www.escidoc.de/schemas/item/0.10"
        type="de.escidoc.core.resources.om.item.Item">
        <structure map-as="abstract-item" />
      </structure>
      <structure name="container"
        ns="http://www.escidoc.de/schemas/container/0.9" 
        type="de.escidoc.core.resources.om.container.Container">
        <structure map-as="abstract-container" />
      </structure>
    </collection>
  </mapping>
  <!-- end: binding of an item list -->
</binding>