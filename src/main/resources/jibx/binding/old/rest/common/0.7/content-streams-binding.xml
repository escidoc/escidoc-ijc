<binding>

  <mapping name="content-streams" class="de.escidoc.core.resources.common.ContentStreams"
    ns="http://www.escidoc.de/schemas/contentstreams/0.7">
    
    <namespace uri="http://www.escidoc.de/schemas/contentstreams/0.7" 
      prefix="content-streams" default="elements"/>
      
    <collection create-type="java.util.LinkedList" usage="optional">
      <structure type="de.escidoc.core.resources.common.ContentStream"/>
    </collection>
  </mapping>
  
  <mapping name="content-stream" class="de.escidoc.core.resources.common.ContentStream"
    ns="http://www.escidoc.de/schemas/contentstreams/0.7">
    
    <namespace uri="http://www.escidoc.de/schemas/contentstreams/0.7" 
      prefix="content-streams" default="elements"/>
      
    <namespace uri="http://www.w3.org/1999/xlink" prefix="xlink" />
    
    <value ns="http://www.w3.org/1999/xlink" name="href" style="attribute" 
      set-method="setXLinkHref" get-method="getXLinkHref" usage="optional" />
    <value ns="http://www.w3.org/1999/xlink" name="title" style="attribute" 
      set-method="setXLinkTitle" get-method="getXLinkTitle" usage="optional" />
    <value ns="http://www.w3.org/1999/xlink" name="type" style="attribute" 
      set-method="setXLinkType" get-method="getXLinkType" usage="optional" />

    <value name="last-modification-date" style="attribute" 
      type="org.joda.time.DateTime" usage="optional"
      set-method="setLastModificationDate"
      get-method="getLastModificationDate"/>
    
    <value name="inherited" field="inherited" usage="optional" style="attribute"/>
    <value name="name" field="name" usage="required" style="attribute"/>
    <value name="storage" field="storage" usage="required" style="attribute"/>
    <value name="mime-type" field="mimeType" usage="required" style="attribute"/>
    
    <value field="hrefOrBase64Content" style="text" usage="required"/>
  </mapping>
  
</binding>