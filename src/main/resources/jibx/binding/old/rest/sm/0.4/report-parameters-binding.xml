<binding>

  <namespace uri="http://www.escidoc.de/schemas/reportparameters/0.4"
    prefix="report" default="elements"/>
  <namespace uri="http://www.w3.org/1999/xlink" prefix="xlink" />

  <mapping name="report-parameters"
    class="de.escidoc.core.resources.sm.report.ReportParameters"
    ns="http://www.escidoc.de/schemas/reportparameters/0.4"
    pre-get="genXLink">
    
    <structure name="report-definition" field="reportDefinition" 
      type="de.escidoc.core.resources.common.reference.ReportDefinitionRef">
      
      <value ns="http://www.w3.org/1999/xlink" name="href" style="attribute" 
	      set-method="setXLinkHref" get-method="getXLinkHref" usage="optional" />
	    <value ns="http://www.w3.org/1999/xlink" name="title" style="attribute" 
	      set-method="setXLinkTitle" get-method="getXLinkTitle" usage="optional" />
	    <value ns="http://www.w3.org/1999/xlink" name="type" style="attribute" 
	      set-method="setXLinkType" get-method="getXLinkType" usage="optional" />
      
    </structure>
    
    <collection field="parameters" create-type="java.util.LinkedList" 
      item-type="de.escidoc.core.resources.sm.Parameter"
      usage="optional">
      <structure name="parameter" 
        marshaller="de.escidoc.core.common.jibx.binding.ParameterMarshaller"
        unmarshaller="de.escidoc.core.common.jibx.binding.ParameterMarshaller"/>  
    </collection>
  </mapping>
</binding>